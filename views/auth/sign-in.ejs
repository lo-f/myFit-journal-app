<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign In</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Arvo:ital,wght@0,400;0,700;1,400;1,700&family=Fugaz+One&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Arvo:ital,wght@0,400;0,700;1,400;1,700&family=Fugaz+One&family=Spinnaker&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <h1>Sign in</h1>
  <form action="/auth/sign-in" method="POST">
    <label for="username">Username:</label>
    <input type="text" name="username" id="username" required />
    <% if (typeof errorMessage !== 'undefined') { %>
      <div id="error-message" class="error-message"><%= errorMessage %></div>
    <% } %>

    <label for="password">Password:</label>
    <input type="password" name="password" id="password" required />
    <% if (typeof passwordError !== 'undefined') { %>
      <div class="passwordMismatchError" id="passwordMismatchError">
        <%= passwordError %>
      </div>
    <% } %>
    
    <button type="submit">Sign in</button>
  </form>
</body>

<style>
  .error-message, .passwordMismatchError{
      color: red;
      font-weight: bold;
      transition: opacity 0.5s ease-out;
  }
  .hide {
      opacity: 0;
  }
</style>

<script>
  const User = require('../../models/user.js');
  </script>
  <script>
    const form = document.querySelector('form');
    async function hideUsernameErrorMessage() {
              const errorMessageElement = document.getElementById('error-message');
              if (errorMessageElement) {
                  setTimeout(() => {
                      errorMessageElement.classList.add('hide');
                  }, 2000);
              }
          }
  
          hideUsernameErrorMessage();
  
    async function hideErrorMessage() {
              const errorMessageElement = document.getElementById('passwordMismatchError');
              if (errorMessageElement) {
                  setTimeout(() => {
                      errorMessageElement.classList.add('hide');
                  }, 2000);
              }
          }
  
          hideErrorMessage();
  
  
  </script>



</html>
